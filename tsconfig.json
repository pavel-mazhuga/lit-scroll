{
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019"],
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./dist",
        "removeComments": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist/**/*"]
}
